<Page
    x:Class="DTDLOntologyViewer.GUI.InterfacePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DTDLOntologyViewer.GUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Microsoft.Azure.DigitalTwins.Parser.Models"
    mc:Ignorable="d"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <controls:DockPanel LastChildFill="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock Margin="10,10,10,5" controls:DockPanel.Dock="Top"
                               HorizontalAlignment="Stretch" 
                               FontWeight="Bold" x:Name="FormHeader">Interface:</TextBlock>
        <TabView VerticalAlignment="Stretch">
            <TabViewItem Header="Form view">
                <StackPanel Orientation="Vertical" Padding="10" HorizontalAlignment="Left">
                    <StackPanel.Resources>
                        <DataTemplate x:Key="LocalizedStringListViewTemplate" x:DataType="local:LocalizedString">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{x:Bind Language}" FontWeight="Bold" />
                                <TextBlock Text=":" FontWeight="Bold" Margin="0,0,5,0" />
                                <TextBlock Text="{x:Bind Value}" MaxWidth="800" TextWrapping="Wrap"/>
                            </StackPanel>
                        </DataTemplate>
                        <DataTemplate x:Key="DTMIInterfaceListViewTemplate" x:DataType="models:DTInterfaceInfo">
                            <TextBlock Text="{x:Bind Id.AbsoluteUri}" x:Phase="1" Margin="0,5,0,5"/>
                        </DataTemplate>
                    </StackPanel.Resources>
                    <TextBlock FontWeight="Bold">DTMI:</TextBlock>
                    <TextBlock x:Name="DtmiTextBlock" Margin="0,0,0,10"></TextBlock>

                    <TextBlock FontWeight="Bold">Display Name:</TextBlock>
                    <ListView x:Name="DisplayNameListView" ItemsSource="{x:Bind DisplayNameCollection}" ItemTemplate="{StaticResource LocalizedStringListViewTemplate}" Margin="0,0,0,10" />

                    <TextBlock FontWeight="Bold">Description:</TextBlock>
                    <ListView x:Name="DescriptionListView" ItemsSource="{x:Bind DescriptionCollection}" ItemTemplate="{StaticResource LocalizedStringListViewTemplate}" Margin="0,0,0,10" />

                    <TextBlock FontWeight="Bold">Extends:</TextBlock>
                    <ListView x:Name="ExtendsListView" ItemsSource="{x:Bind ExtendsCollection}" ItemTemplate="{StaticResource DTMIInterfaceListViewTemplate}" Margin="0,0,0,10" />

                    <TextBlock FontWeight="Bold">Properties:</TextBlock>
                    <ListView x:Name="PropertiesView" ItemsSource="{x:Bind PropertiesCollection}" Margin="0,0,0,10">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:DTPropertyInfo">
                                <TextBlock Text="{x:Bind Name}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <TextBlock FontWeight="Bold">Relationships:</TextBlock>
                    <ListView x:Name="RelationshipsView" ItemsSource="{x:Bind RelationshipsCollection}" Margin="0,0,0,10">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:DTRelationshipInfo">
                                <TextBlock Text="{x:Bind Name}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

            </TabViewItem>
            <TabViewItem Header="Visualization view">
                <TextBlock Margin="10">
                            Visualization view goes here.
                </TextBlock>
            </TabViewItem>
        </TabView>
    </controls:DockPanel>

        

</Page>
